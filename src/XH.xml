<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
C:\Projects\WoW\Bin\Interface\FrameXML\UI.xsd">
	<Script file="XH.lua"/>
	<!-- Version 1.4 -->
	<Frame name="XHFrame" frameStrata="HIGH" toplevel="true" enableMouse="true" movable="true" parent="UIParent">
		<Size>
			<AbsDimension x="400" y="34"/>
		</Size>
		<Anchors>
			<Anchor point="TOP" />
		</Anchors>
		<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
		<!--
		<Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
		-->
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
		</Backdrop>

		<Frames>
			<Button name="XHButton">
				<Size>
					<AbsDimension x="10" y="12"/>
				</Size>
				<Anchors>
					<Anchor point="CENTER">
						<Offset>
							<AbsDimension x="0" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer level="OVERLAY">
						<FontString name="XH_Text" inherits="GameFontNormalSmall" wraponspaces="true">
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="7"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Color r="1" g="1" b="1" />
						</FontString>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="XH_RepText" inherits="GameFontNormalSmall" font="Fonts\ARIALN.TTF" fontHeight="16" >
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="-7"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Color r="1" g="1" b="1" />
							<FontHeight>
								<AbsValue val="12"/>
							</FontHeight>
						</FontString>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="XH_InstanceText" inherits="GameFontNormalSmall" wraponspaces="true">
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="-7"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Color r="1" g="1" b="1" />
						</FontString>
					</Layer>
					<Layer level="OVERLAY">
						<FontString name="XH_SkillText" inherits="GameFontNormalSmall" wraponspaces="true">
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="-21"/>
									</Offset>
								</Anchor>
							</Anchors>
							<Color r="1" g="1" b="1" />
						</FontString>
					</Layer>
					<!---
					<Layer level="BACKGROUND">
						<FontString name="XH_LocText" inherits="GameFontNormal" wraponspaces="true">
							<Anchors>
								<Anchor point="CENTER">
									<Offset>
										<AbsDimension x="0" y="-35"/>
									</Offset>
								</Anchor>
							</Anchors>
						</FontString>
					</Layer>
					-->
				</Layers>
			</Button>

			<!-- EXP / Hr bar - Full XP -->
			<StatusBar name="XH_XPBarFull" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="5" y="-5" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad> <!-- artwork -->
						XH_XPBarFull:SetFrameLevel( 0 );
						XH_XPBarFull:SetAlpha(1.0)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0.5" g="0" b="0"/>
			</StatusBar>

			<!-- Rested % bar -->
			<StatusBar name="XH_XPBarRested" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="5" y="-5"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad> <!-- Background -->
						XH_XPBarRested:SetFrameLevel( 1 );
						XH_XPBarRested:SetAlpha(1.0)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0.3" b="0.9"/>
			</StatusBar>

			<!-- Rep bar -->
			<StatusBar name="XH_RepBar" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="5" y="-17"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad> 
						XH_RepBar:SetFrameLevel( 1 );
						XH_RepBar:SetAlpha(1.0)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar"/>
				<BarColor r="0" g="0.4" b="0"/>
			</StatusBar>

			<!-- Instance Timer Bar -->
			<StatusBar name="XH_InstanceTimerBack" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<!--<AbsDimension x="5" y="-32"/>-->
							<AbsDimension x="5" y="-17"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad> <!-- Artwork -->
						XH_InstanceTimerBack:SetFrameLevel( 1 );
						XH_InstanceTimerBack:SetAlpha(0.5)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interfae\TargetingFrame\UI-StatusBar" />
				<BarColor r="0.0" g="0.0" b="0.0" />
			</StatusBar>
			<StatusBar name="XH_InstanceTimerBar" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<!--<AbsDimension x="5" y="-32" />-->
							<AbsDimension x="5" y="-17" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>	<!-- Background -->
						XH_InstanceTimerBar:SetFrameLevel( 0 );
						XH_InstanceTimerBar:SetAlpha(1.0)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar" />
				<BarColor r="0.1" g="0.1" b="0.1" />
			</StatusBar>
			
			<!-- Skill bar -->
			<StatusBar name="XH_SkillBar" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="5" y="-32" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>	<!-- Background -->
						XH_SkillBar:SetFrameLevel( 1 );
						XH_SkillBar:SetAlpha(1.0)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar" />
				<BarColor r="0" g="0" b="1" />
			</StatusBar>
			<StatusBar name="XH_SkillBarCD" inherits="TextStatusBar">
				<Size>
					<AbsDimension x="390" y="12" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="XHFrame" relativePoint="TOPLEFT">
						<Offset>
							<AbsDimension x="5" y="-32" />
						</Offset>
					</Anchor>
				</Anchors>
				<Scripts>
					<OnLoad>	<!-- Background -->
						XH_SkillBarCD:SetFrameLevel( 0 );
						XH_SkillBarCD:SetAlpha(1.0)
					</OnLoad>
				</Scripts>
				<BarTexture file="Interface\TargetingFrame\UI-StatusBar" />
				<BarColor r="0.5" g="0.5" b="0" />
			</StatusBar>

		</Frames>
		<Scripts>
			<OnLoad>
				XH_OnLoad();
			</OnLoad>
			<OnMouseDown>
				XH_OnDragStart();
			</OnMouseDown>
			<OnMouseUp>
				XH_OnDragStop();
			</OnMouseUp>
			<OnUpdate>
				XH_OnUpdate(arg1);
			</OnUpdate>
			<OnEvent>
				XH_OnEvent(event, ...);
			</OnEvent>
			<OnEnter>
				XH_OnEnter();
			</OnEnter>
			<OnLeave>
				XH_OnLeave();
			</OnLeave>
		</Scripts>
	</Frame>
	<Frame name="XHInstanceList" parent="UIParent">
		<Size x="400" y="400"/>
		<Anchors>
			<Anchor point="CENTER" />
		</Anchors>
		<Backdrop edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
		</Backdrop>
		
	</Frame>
	<GameTooltip name="XHTooltip" inherits="GameTooltipTemplate" parent="UIParent" hidden="true"/>
</Ui>

